package com.statistics.service;

import java.util.List;

import org.springframework.beans.factory.annotation.Autowired;
import org.springframework.stereotype.Service;

import com.statistics.client.BookClient;
import com.statistics.dto.BookDto;

@Service
public class StatisticsBookService {
	
	@Autowired
	BookClient client;
	
	public String basedGenre(String genre) {
		List<BookDto> books = client.getByGenre(genre);
		String result = String.format(
				"There are %d books of the %s in the library.", books.size(), genre
				);
		return result;
	}
}
