server:
  port: 8085
  
spring:
  application:
    name: LibraryStatisticsService

eureka:
  client:
    serviceUrl: 
       defaultZone: http://localhost:8761/eureka
  instance:
    preferIpAddress: true

management:
  health:
    circuitbreakers:
      enabled: true
  endpoint:
    health:
      show-details: always
  endpoints:
    web:
      exposure:
        include: health
resilience4j:
  ratelimiter:
    instances:
      default:
        limitForPeriod: 2
        limitRefreshPeriod: 5s