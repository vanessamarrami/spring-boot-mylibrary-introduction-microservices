package com.gateway;

import org.springframework.web.bind.annotation.GetMapping;
import org.springframework.web.bind.annotation.RequestMapping;
import org.springframework.web.bind.annotation.RestController;

import reactor.core.publisher.Mono;

@RestController
public class FallBackController {
	

    @RequestMapping("/fallbackLibrary")
    public Mono<String> fallbackLibrary() {
        return Mono.just("Servizio Library non disponibile.");
    }

    @RequestMapping("/fallbackStatistic")
    public Mono<String> fallbackStatistic() {
        return Mono.just("Servizio LibraryStatistic non disponibile.");
    }

    @GetMapping("/api/library/**")
    public Mono<String> fallbackLibraryRoute() {
        return Mono.just("Servizio Library non disponibile.");
    }

    @GetMapping("/api/book-statistics/**")
    public Mono<String> fallbackLibraryStatisticRoute() {
        return Mono.just("Servizio LibraryStatistic non disponibile.");
    }
}